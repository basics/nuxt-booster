{
  "extends": ["@nuxtjs", ":semanticCommits"],
  "packageRules": [
    {
      "groupName": "nuxt",
      "matchPackageNames": ["/nuxt/"]
    },
    {
      "matchPackageNames": ["node"],
      "major": {
        "enabled": true
      },
      "separateMultipleMajor": true,
      "allowedVersions": "^20"
    }
  ],
  "baseBranchPatterns": ["main"],
  "rangeStrategy": "pin"
}
